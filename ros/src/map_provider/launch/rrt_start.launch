<launch>
    <arg name="eta" value="0.6"/>
    <arg name="Geta" value="12.0"/>
    <param name="namespace_init_count" value="1"/>

    <node pkg="map_provider" type="global_rrt_detector" name="global_detector" output="screen">
        <param name="eta" value="$(arg Geta)"/>
        <param name="map_topic" value="/map"/>
    </node>

    <node pkg="map_provider" type="local_rrt_detector" name="local_detector" output="screen">
        <param name="eta" value="$(arg eta)"/>
        <param name="map_topic" value="/map"/>
        <param name="robot_frame" value="/base_footprint"/>
    </node>

    <node pkg="map_provider" type="filter.py" name="filter" output="screen">
        <param name="map_topic" value="/map"/>
        <param name="info_radius" value="1"/> 
        <param name="costmap_clearing_threshold" value="70"/> 
        <param name="goals_topic" value="/detected_points"/>
        <param name="namespace" value=""/> 
        <param name="n_robots" value="1"/>
        <param name="rate" value="100"/>
        <param name="robot_frame" value="base_footprint"/>
    </node>

</launch>
